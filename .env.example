# Telegram Configuration
KB_TELEGRAM_BOT_TOKEN=your_bot_token_here
KB_TELEGRAM_CHANNEL_ID=@your_channel_name

# LLM Provider (choose one as default: openai, anthropic, gemini, deepseek, kimi, minimax, glm)
KB_LLM_PROVIDER=gemini

# LLM API Keys (fill in the ones you need)
GEMINI_API_KEY=your_gemini_api_key
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
DEEPSEEK_API_KEY=your_deepseek_api_key
KIMI_API_KEY=your_kimi_api_key
MINIMAX_API_KEY=your_minimax_api_key
GLM_API_KEY=your_glm_api_key

# Preset Tags (comma-separated)
# These are your main category tags that LLM will match content against
KB_PRESET_TAGS=AI,Paper,LLM,VLM,多模态,Multi-modal,Agent,预训练,后训练,强化学习,RL

# Bot Service Configuration (for kb-serve command)
# Your Telegram user ID (get it from @userinfobot)
KB_BOT_ADMIN_USER_ID=your_telegram_user_id
# Auto publish mode: true = publish directly, false = preview and confirm (default: false)
KB_BOT_AUTO_PUBLISH=false
